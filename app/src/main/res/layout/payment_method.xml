<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F4F7FB"
    tools:context=".Payment.PaymentMethodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="32dp">

            <TextView
                android:id="@+id/tvPaymentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Payment Method"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount Due"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvPaymentTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$49.99"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#EF4444"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvAmountLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPaymentMethods"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Global Methods"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4B5563"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreditCard"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Credit / Debit Card"
                        android:textColor="#1F2937"
                        app:icon="@drawable/ic_credit_card"
                        app:iconTint="#3B82F6"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#EBF5FF"
                        android:textAlignment="viewStart"
                        android:paddingStart="16dp"
                        android:layout_marginBottom="10dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPayPal"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="PayPal"
                        android:textColor="#1F2937"
                        app:icon="@drawable/ic_paypal"
                        app:iconTint="#3B82F6"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#EBF5FF"
                        android:textAlignment="viewStart"
                        android:paddingStart="16dp"
                        android:layout_marginBottom="10dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGooglePay"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="Google Pay"
                        android:textColor="#1F2937"
                        app:icon="@drawable/ic_google_pay"
                        app:iconTint="#3B82F6"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#EBF5FF"
                        android:textAlignment="viewStart"
                        android:paddingStart="16dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local Methods"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4B5563"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMoMo"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="MoMo e-wallet (QR)"
                        android:textColor="#1F2937"
                        app:icon="@drawable/ic_momo"
                        app:iconTint="#D81B60"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#FEE7F2"
                        android:textAlignment="viewStart"
                        android:paddingStart="16dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/layoutMoMoQR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_qr_container_momo"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/ic_qr_example"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="MoMo QR Code"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan this QR with MoMo app"
                            android:textSize="14sp"
                            android:textColor="#424242"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVNBankQR"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:text="VN Bank QR (VietQR)"
                        android:textColor="#1F2937"
                        app:icon="@drawable/ic_bank_qr"
                        app:iconTint="#1976D2"
                        app:cornerRadius="12dp"
                        android:backgroundTint="#E3F2FF"
                        android:textAlignment="viewStart"
                        android:paddingStart="16dp"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:id="@+id/layoutVNBankQR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/bg_qr_container_bank"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/ic_qr_example"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="VN Bank QR Code"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scan this QR with your banking app"
                            android:textSize="14sp"
                            android:textColor="#424242"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmPayment"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Confirm Payment"
                android:backgroundTint="#3B82F6"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"
                app:cornerRadius="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/cardPaymentMethods"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>