<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thank_you_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome_gradient"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".Payment.ThankYouActivity">

    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_star"
        android:tint="#FBBF24"
        android:contentDescription="Success"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/tvThankYouTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imgSuccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvThankYouMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="We truly appreciate your support. Your subscription helps us deliver smarter learning materials and exclusive content for you."
        android:textSize="16sp"
        android:textColor="#B3FFFFFF"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvThankYouTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackHome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="16dp"
        android:background="@drawable/btn_primary_gradient"
        android:textColor="#111111"
        app:layout_constraintTop_toBottomOf="@id/tvThankYouMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need help? Contact support"
        android:textSize="14sp"
        android:textColor="#FFB74D"
        app:layout_constraintTop_toBottomOf="@id/btnBackHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>