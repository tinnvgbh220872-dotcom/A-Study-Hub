<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top-up"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/tvTopupHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested: Top-up $50 to get 10% bonus"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/btnTopup10"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="$10"
                android:textSize="18sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnTopup50"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="$50"
                android:textSize="18sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnTopup100"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="$100"
                android:textSize="18sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/btnTopup500"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="$500"
                android:textSize="18sp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_margin="8dp"/>
        </GridLayout>

        <EditText
            android:id="@+id/etCustomTopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter custom amount"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnConfirmTopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Top-up"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
