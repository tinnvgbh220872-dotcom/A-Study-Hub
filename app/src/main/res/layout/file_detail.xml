<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F4F7FB"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Project Report Q4.pdf"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#1F2937"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvFileSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Size: 12.5 MB | Updated: 1 hour ago"
                android:textSize="14sp"
                android:textColor="#6B7280"
                app:layout_constraintTop_toBottomOf="@id/tvFileName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPreviewContainer"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/tvFileSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#D1D5DB"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvFileContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:padding="16dp"
                        android:visibility="gone"
                        android:scrollbars="vertical"
                        android:text="Content snippet of the text file..."/>

                    <View
                        android:id="@+id/blurOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blur_gradient_mock"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_document_placeholder"
                            app:tint="#4B5563"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tap 'Preview' below to view file"
                            android:textColor="#4B5563"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Preview File"
                android:backgroundTint="#10B981"
                app:icon="@drawable/ic_visibility"
                app:iconTint="#FFFFFF"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardPreviewContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnDownload"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Download"
                android:backgroundTint="#3B82F6"
                app:icon="@drawable/ic_download"
                app:iconTint="#FFFFFF"
                android:textColor="#FFFFFF"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toTopOf="@id/btnPreview"
                app:layout_constraintStart_toEndOf="@id/btnPreview"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"/>

            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnPreview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditFile"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit File"
                    android:textColor="#F59E0B"
                    app:strokeColor="#FCD34D"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="#F59E0B"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteFile"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete File"
                    android:textColor="#EF4444"
                    app:strokeColor="#FCA5A5"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="#EF4444"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCommentsHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/layoutActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutCommentInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tvCommentsHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Write a comment..."
                    android:background="@drawable/bg_edittext_rounded"
                    android:padding="12dp"
                    android:minHeight="50dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"
                    android:textColor="#1F2937"
                    android:textColorHint="#9CA3AF"
                    android:inputType="textCapSentences|textMultiLine"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnSendComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_send"
                    app:tint="#FFFFFF"
                    app:backgroundTint="#8B5CF6"
                    app:fabSize="normal"
                    app:maxImageSize="24dp"
                    app:elevation="4dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentRecycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/layoutCommentInput"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/list_item_comment"
                tools:itemCount="3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/previewOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/overlayImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:padding="16dp"/>

        <ScrollView
            android:id="@+id/overlayScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <TextView
                android:id="@+id/overlayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="18sp"
                android:padding="20dp"
                android:visibility="gone"
                android:fontFamily="monospace"/>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCloseOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF"
            app:backgroundTint="#6B7280"/>
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>