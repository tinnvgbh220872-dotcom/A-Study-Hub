<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/premium_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="32dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/premium_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/premium_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Premium Plan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:textColor="#212121" />

        <TextView
            android:id="@+id/premium_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upgrade to access exclusive study materials, remove ads, and unlock advanced features."
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="#424242" />

        <!-- Trial Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/premium_card_trial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/premium_trial_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Trial Plan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/premium_trial_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#43A047"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/premium_trial_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Try premium features for 7 days at no cost."
                    android:layout_marginTop="8dp"
                    android:textColor="#757575"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/premium_btn_trial_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:backgroundTint="#BDBDBD"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_button_rounded"/>

                    <Button
                        android:id="@+id/premium_btn_trial_subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscribe"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#43A047"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_button_rounded"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Monthly Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/premium_card_monthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/premium_monthly_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Monthly Plan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/premium_monthly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$4.99/month"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F57C00"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/premium_monthly_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Access all premium materials and ad-free experience for one month."
                    android:layout_marginTop="8dp"
                    android:textColor="#757575"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/premium_btn_monthly_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:backgroundTint="#BDBDBD"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_button_rounded"/>

                    <Button
                        android:id="@+id/premium_btn_monthly_subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscribe"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#F57C00"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_button_rounded"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Yearly Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/premium_card_yearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/premium_yearly_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Yearly Plan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:id="@+id/premium_yearly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$39.99/year"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/premium_yearly_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best value plan! Get full access for an entire year"
                    android:layout_marginTop="8dp"
                    android:textColor="#757575"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/premium_btn_yearly_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:backgroundTint="#BDBDBD"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_button_rounded"/>

                    <Button
                        android:id="@+id/premium_btn_yearly_subscribe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subscribe"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#D32F2F"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/bg_button_rounded"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
