<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trial Plan Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Duration: 7 days free\n• Access: Limited study materials\n• Renewal: Ends automatically after trial\n• Experience premium learning without any cost!\n\nDiscover what makes A-Study-Hub the best learning companion before you decide."/>

    <Button
        android:id="@+id/btnTrialSubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Free Trial"
        android:layout_marginTop="12dp"/>
</LinearLayout>
