<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="24dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ Trial Plan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trial Plan Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Duration: 7 days free\n• Access: Limited study materials\n• Renewal: Ends automatically after trial\n• Experience premium learning without any cost!"
            android:layout_marginBottom="12dp"
            android:textColor="#424242"/>

        <Button
            android:id="@+id/btnTrialSubscribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Free Trial"
            android:backgroundTint="#43A047"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
