<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.final_project"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />




    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Finalproject"
        tools:targetApi="31">

        <activity
            android:name=".MainScreen.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Finalproject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject" />

        <activity
            android:name=".Auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject" />

        <activity
            android:name=".MainScreen.MainScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject" />

        <activity
            android:name=".Profile.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Auth.GoogleLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Auth.ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Auth.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".File.UploadFileActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".File.FileDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Profile.ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Profile.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Premium.PremiumActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Premium.TrialActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Premium.MonthlyActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Premium.YearlyActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Payment.ThankYouActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Payment.PaymentMethodActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject" />
        <activity
            android:name=".Payment.PaymentConfirmationActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Payment.MyOrdersActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Payment.WalletActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".Payment.TopupActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>
        <activity
            android:name=".File.UserActivity"
            android:exported="false"
            android:theme="@style/Theme.Finalproject"/>

        <service
            android:name=".Firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>



        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
